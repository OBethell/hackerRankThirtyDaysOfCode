import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        String[] words = new String[n];
        for(int x = 0 ;x <= n-1;x++){
            int evenCount = 0;
            int oddCount = 0;
            words[x] = scanner.next();
            char[] letters=words[x].toCharArray();
            int length = letters.length;
            char[] lettersEven = new char[(length/2)+(length%2)];
            char[] lettersOdd = new char[length/2];
            for(int y = 0; y < length; y++){
                if(y % 2 == 0){
                    lettersEven[evenCount] = letters[y];
                    evenCount++;
                }else if (y % 2 == 1){
                    lettersOdd[oddCount] = letters[y];
                    oddCount++;
                }
            }
            StringBuilder sb = new StringBuilder();
            sb.append(lettersEven);
            sb.append(" ");
            sb.append(lettersOdd);
            System.out.println(sb);
        }
    }
}
