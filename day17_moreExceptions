class Calculator{
    int ans;
        // Constructor
    public Calculator(){
        this.ans = 0;
    }

// Method
public int power(int n, int p) throws Exception{
        if (n < 0) {
            throw new Exception("n and p should be non-negative");
        } else if (p < 0) {
            throw new Exception("n and p should be non-negative");
        }else{
            ans = n;
            ans = (int) java.lang.Math.pow(n,p);
            }
            return ans;
        }
    }
